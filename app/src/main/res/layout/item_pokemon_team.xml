<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/backImage"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rounded_back_orange_small_border2" />

    <ImageView
        android:id="@+id/obj1"
        android:layout_width="58dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/backImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backImage"
        app:layout_constraintVertical_bias="0.432"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <TextView
        android:id="@+id/pokeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Nom"
        android:textColor="#4E4E4E"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/obj1"
        app:layout_constraintTop_toTopOf="@id/backImage" />

    <LinearLayout
        android:id="@+id/typesContainer"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/pokeName"
        app:layout_constraintTop_toBottomOf="@+id/pokeName">

        <ImageView
            android:id="@+id/type1"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            app:srcCompat="@drawable/acier" />

        <ImageView
            android:id="@+id/type2"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/dragon" />
    </LinearLayout>

    <ImageView
        android:id="@+id/attackBtn1"
        android:layout_width="97dp"
        android:layout_height="51dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@id/backImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backImage"
        app:srcCompat="@drawable/change_atk_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>